# API Secret for authenticating cron requests
# Generate with: openssl rand -hex 32
API_SECRET=your_api_secret_here

# Netatmo API Credentials
# Create an app at https://dev.netatmo.com
NETATMO_CLIENT_ID=your_client_id
NETATMO_CLIENT_SECRET=your_client_secret

# Netatmo Refresh Token
# Obtain via OAuth flow at dev.netatmo.com
NETATMO_REFRESH_TOKEN=your_refresh_token

# Vercel URL (required for QStash callbacks)
# Auto-set by Vercel in production; set manually for local dev
VERCEL_URL=your-app.vercel.app

# Upstash Redis
# Create a database at https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# Upstash QStash
# Create an instance at https://console.upstash.com
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_current_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key
